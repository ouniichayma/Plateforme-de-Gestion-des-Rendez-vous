<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Gestion des Rendez-vous</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar {
            background-color: #ffffff;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .navbar-brand {
            font-weight: 600;
            color: #0d6efd;
        }
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }
        .btn {
            border-radius: 0.25rem;
        }
        .sidebar {
            min-height: 100vh;
            padding-top: 1rem;
            background-color: #ffffff;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }
        .sidebar .nav-link {
            color: #333;
            padding: 0.5rem 1rem;
            margin: 0.2rem 0;
            border-radius: 0.25rem;
        }
        .sidebar .nav-link:hover {
            background-color: #f8f9fa;
        }
        .sidebar .nav-link.active {
            color: #0d6efd;
            background-color: #e7f1ff;
        }
        .user-profile {
            padding: 1rem;
            margin-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }
        #calendar {
            background-color: #fff;
            padding: 1rem;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .fc-event {
            cursor: pointer;
            padding: 0.2rem 0.5rem;
        }
        .list-group-item {
            border: 1px solid rgba(0,0,0,.125);
            margin-bottom: 0.5rem;
            border-radius: 0.5rem !important;
        }
    </style>
</head>
<body>
    <header>
        <!-- Menu ou autre contenu en haut de la page -->
    </header>

    <main>
        <!-- Ici, le contenu de chaque page viendra s'afficher -->
        <%- body %>
    </main>

    <footer>
        <!-- Pied de page -->
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script>
        // Initialisation de FullCalendar en français
        document.addEventListener('DOMContentLoaded', function() {
            if(typeof FullCalendar !== 'undefined') {
                FullCalendar.globalLocales.push({
                    code: 'fr',
                    week: {
                        dow: 1,
                        doy: 4
                    },
                    buttonText: {
                        prev: 'Précédent',
                        next: 'Suivant',
                        today: 'Aujourd\'hui',
                        year: 'Année',
                        month: 'Mois',
                        week: 'Semaine',
                        day: 'Jour',
                        list: 'Liste'
                    },
                    weekText: 'Sem.',
                    allDayText: 'Toute la journée',
                    moreLinkText: 'en plus',
                    noEventsText: 'Aucun événement à afficher'
                });
            }
        });
    </script>
</body>
</html>
