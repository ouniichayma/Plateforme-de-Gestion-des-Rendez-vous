<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap5.min.css">
    
    <style>
        .status-pending { background-color: #ffc107 !important; color: #000 !important; }
        .status-accepted { background-color: #198754 !important; color: #fff !important; }
        .status-rejected { background-color: #dc3545 !important; color: #fff !important; }
        .status-cancelled { background-color: #6c757d !important; color: #fff !important; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
            <div class="container">
                <a class="navbar-brand" href="/dashboard">
                    <i class="bi bi-calendar2-check"></i>
                    Espace Professionnel
                </a>
                <div class="d-flex align-items-center">
                    <button class="btn btn-outline-light me-2" onclick="window.location.href='/appointments/list'">
                        <i class="bi bi-list-ul"></i> Liste des rendez-vous
                    </button>
                    <span class="navbar-text me-3 text-white">
                        <i class="bi bi-person"></i> <%= user.firstName %> <%= user.lastName %>
                    </span>
                    <button class="btn btn-outline-light" onclick="handleLogout()">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </button>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Liste des Rendez-vous</h4>
                            <div class="table-responsive">
                                <table id="appointmentsTable" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Heure</th>
                                            <th>Client</th>
                                            <th>Motif</th>
                                            <th>Statut</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Les rendez-vous seront chargés ici -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour les détails -->
    <div class="modal fade" id="appointmentModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Détails du rendez-vous</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <strong>Client :</strong>
                        <span id="modal-client"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Date :</strong>
                        <span id="modal-date"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Heure :</strong>
                        <span id="modal-time"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Motif :</strong>
                        <p id="modal-reason" class="mb-0"></p>
                    </div>
                    <div class="mb-3">
                        <strong>Statut :</strong>
                        <span id="modal-status" class="badge"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-success" id="acceptBtn">Accepter</button>
                    <button type="button" class="btn btn-danger" id="rejectBtn">Refuser</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap5.min.js"></script>

    <script>
        let currentAppointmentId = null;
        const appointmentModal = new bootstrap.Modal(document.getElementById('appointmentModal'));
        let appointmentsTable;

        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser DataTables
            appointmentsTable = $('#appointmentsTable').DataTable({
                responsive: true,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/fr-FR.json'
                },
                order: [[0, 'desc'], [1, 'desc']]
            });

            loadAppointments();

            // Gestionnaire pour le bouton Accepter
            document.getElementById('acceptBtn').addEventListener('click', () => {
                updateAppointmentStatus(currentAppointmentId, 'accepted');
            });

            // Gestionnaire pour le bouton Refuser
            document.getElementById('rejectBtn').addEventListener('click', () => {
                updateAppointmentStatus(currentAppointmentId, 'rejected');
            });
        });

        function handleLogout() {
            fetch('/logout', { method: 'POST' })
                .then(() => window.location.href = '/login')
                .catch(error => console.error('Erreur de déconnexion:', error));
        }

        async function loadAppointments() {
            try {
                const response = await fetch('/api/appointments/my-appointments');
                const appointments = await response.json();
                
                // Vider la table
                appointmentsTable.clear();

                // Ajouter les nouvelles données
                appointments.forEach(apt => {
                    const date = new Date(apt.date).toLocaleDateString('fr-FR');
                    const statusBadge = `<span class="badge status-${apt.status}">${apt.status}</span>`;
                    const actions = getActionButtons(apt);

                    appointmentsTable.row.add([
                        date,
                        apt.time,
                        `${apt.client.firstName} ${apt.client.lastName}`,
                        apt.reason,
                        statusBadge,
                        actions
                    ]);
                });

                // Redessiner la table
                appointmentsTable.draw();

                // Ajouter les gestionnaires d'événements pour les boutons
                appointments.forEach(apt => {
                    const viewBtn = document.getElementById(`view-${apt._id}`);
                    if (viewBtn) {
                        viewBtn.addEventListener('click', () => showAppointmentDetails(apt));
                    }
                });
            } catch (error) {
                console.error('Erreur lors du chargement des rendez-vous:', error);
                alert('Erreur lors du chargement des rendez-vous');
            }
        }

        async function updateAppointmentStatus(id, status) {
            try {
                const response = await fetch(`/api/appointments/${id}/${status}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();
                
                if (data.success) {
                    appointmentModal.hide();
                    loadAppointments();
                } else {
                    alert(data.message || 'Erreur lors de la mise à jour du rendez-vous');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur lors de la mise à jour du rendez-vous');
            }
        }

        function getActionButtons(appointment) {
            let buttons = `<button id="view-${appointment._id}" class="btn btn-sm btn-info me-2">
                            <i class="bi bi-eye"></i> Voir
                        </button>`;

            if (appointment.status === 'pending') {
                buttons += `
                    <button onclick="updateAppointmentStatus('${appointment._id}', 'accepted')" class="btn btn-sm btn-success me-2">
                        <i class="bi bi-check-circle"></i> Accepter
                    </button>
                    <button onclick="updateAppointmentStatus('${appointment._id}', 'rejected')" class="btn btn-sm btn-danger">
                        <i class="bi bi-x-circle"></i> Refuser
                    </button>`;
            }

            return buttons;
        }

        function showAppointmentDetails(appointment) {
            currentAppointmentId = appointment._id;
            
            document.getElementById('modal-client').textContent = 
                `${appointment.client.firstName} ${appointment.client.lastName}`;
            document.getElementById('modal-date').textContent = 
                new Date(appointment.date).toLocaleDateString('fr-FR');
            document.getElementById('modal-time').textContent = appointment.time;
            document.getElementById('modal-reason').textContent = appointment.reason;
            
            const statusElement = document.getElementById('modal-status');
            statusElement.textContent = appointment.status;
            statusElement.className = `badge status-${appointment.status}`;
            
            // Afficher/masquer les boutons d'action selon le statut
            const acceptBtn = document.getElementById('acceptBtn');
            const rejectBtn = document.getElementById('rejectBtn');
            if (appointment.status === 'pending') {
                acceptBtn.style.display = 'block';
                rejectBtn.style.display = 'block';
            } else {
                acceptBtn.style.display = 'none';
                rejectBtn.style.display = 'none';
            }
            
            appointmentModal.show();
        }
    </script>
</body>
</html>
